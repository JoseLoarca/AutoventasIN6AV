@model IEnumerable<Autoventas_IN6AV.Models.Reservacion>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Reporte Solicitudes - Autoventas Cars</title>
    <link href="css/bootstrap.css" rel="stylesheet">
</head>
<body onload="window.print();">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <h1>
                    <a href="@Url.Action("Index","Home")">Autoventas Cars</a>
                </h1>
            </div>
            <div class="col-xs-6 text-right">
                <h1>REPORTE</h1>
                <h1><small>Solicitudes de reservación</small></h1>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>De: Administrador del Sistema</h4>
                        </div>
                        <div class="panel-body">
                            <p>
                                6 avenida 13-54 <br>
                                Colonia Landivar, Zona 7 <br>
                                <strong>Autoventas Cars</strong> <br>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-2 text-right">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>A: Quien interese</h4>
                        </div>
                        <div class="panel-body">
                            <p>
                                <strong>Autoventas Cars</strong> <br>
                            </p>
                        </div>
                    </div>
                </div>
            </div> <!-- / end client details section -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th><h4>Usuario</h4></th>
                        <th><h4>Modelo solicitado</h4></th>
                        <th><h4>Fecha</h4></th>
                    </tr>
                </thead>
                <tbody>
    @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.usuario.nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.automovil.modelo)</td>
                        <td class="text-right">@Html.DisplayFor(modelItem => item.fecha)</td>
                    </tr>
    }
                </tbody>
            </table>

            <div class="col-xs-7">
                <div class="span7">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4>Contacto</h4>
                        </div>
                        <div class="panel-body">
                            <p>
                                Email: admin@cars.com <br><br>
                                Mobile: +(502)30305435 <br> <br>
                                Web: http://github.com/JoseLoarca
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- /row -->
    </div> <!-- /container -->
</body>
</html>
